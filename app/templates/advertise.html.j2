{% extends 'base.html.j2' %}
{% import 'bootstrap/wtf.html' as wtf %}
{% block content %}
  <div class="container">
    <h1>advertise</h1>
    <form method="POST">
      {{ form.csrf_token }}
      <div class="form-group">
        {{ form.title.label }}
        {{ form.title(class='form-control', placeholder='Enter an ad title') }}
      </div>
      <div class="form-group">
        {{ form.content.label }}
        {{ form.content(class='form-control', placeholder='Enter ad content') }}
      </div>
      <div class="form-group">
        {{ form.image.label }}
        {{ form.image(class='form-control-file') }}
      </div>
      <button type="submit" class="btn btn-primary">submit</button>
    </form>
  </div>
{% endblock %}